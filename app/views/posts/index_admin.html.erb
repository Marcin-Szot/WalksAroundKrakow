<div class = "doc">
      <header>
        <div id = "header_center">
          <div id = "page_banner">
            <%= link_to image_tag("banner.png"), posts_path %>
          </div>
          <div id = "wawel">
            <%= image_tag("wawel.png") %>
          </div>
        </div>

        <div class = "switch_mode">
          <%= link_to "Admin Mode", "/index_admin" %>
        </div>
      </header>

      <div class = "content">

        <div class = "categories_bar">
          <ul>
            <% @categories.each do |category| %>
                <li><%= link_to category.title, category_path(category), style: 'text-decoration: none; color: black' %></li>
            <% end %>
          </ul>
        </div>

          <div id = "post_creation">
              <%= link_to "DODAJ POSTA", new_post_path %>
          </div>

        <div id = "category_creation">
          <%= link_to "DODAJ KATEGORIĘ", new_category_path %>
        </div>

          <% @posts.each do |post| %>
              <div class = "post">
                  <div class = "post_date">
                      <%= post.created_at.getlocal.to_date %>
                  </div>

                  <div class = "post_title">
                      <%= post.title %>
                    <hr>
                  </div>

                  <div class = "post_text">
                      <% if post.text.length > 300 %>
                          <%= post.text.first(300) + "..." %>
                      <% else %>
                          <%= post.text %>
                      <% end %>
                  </div>

                  <div class = "post_options">
                      <%= link_to "Dodaj zdjęcie", new_post_image_path(post) %>
                      <%= link_to "Edytuj", edit_post_path(post) %>
                      <%= link_to "Usuń", post_path(post), method: :delete, data: {confirm: "Na pewno?"} %>
                  </div>
              </div>
          <% end %>
      </div>

      <footer>
          <p id = "sign">created by Marcin Szot</p>
      </footer>
</div>
